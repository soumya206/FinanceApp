<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.devi.financeapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".openApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".TodayTotal" />
        <activity
            android:name=".financialCalendar"
            android:windowSoftInputMode="adjustResize|adjustPan" />
        <activity android:name=".addNewBill" />
        <activity android:name=".SpendingPieChart" />
        <activity android:name=".Tips" />
        <activity android:name=".LineGraph"></activity>
    </application>

</manifest>